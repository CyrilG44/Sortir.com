{%  extends 'base.html.twig' %}


{%  block body %}

    <div class="flex justify-center items-center" style="height: 43vh;">
        {{ form_start(form, {'action': path('app_user_import', {'token': csrf_token('import')})}) }}

        {{ form_widget(form.csv_file) }}

        <button
            class="btn btn-primary"
            href="{{ path('app_user_import', {'token':csrf_token('import')}) }}"
            onclick="return confirm('Merci de confirmer l\'ajout d\'utilisateur(s) en cliquant sur OK')">Envoyer
        </button>
        {{ form_end(form) }}
    </div>

    <div class="justify-center items-center mx-auto" style="width: 50vw">
        {% for type in ['success'] %}
        {% for message in app.flashes(type) %}
            <div class="flex justify-center items-center bg-green-300 text-green-800 px-4 py-3 rounded relative">
                {{ message }}
                <br>
            </div>

        {% endfor %}
        {% endfor %}

        {% for type in ['error'] %}

            {% for message in app.flashes(type) %}
            <div class="flex justify-center items-center bg-red-100 text-red-700 px-4 py-3 rounded relative">
                <span class="block sm:inline">
                    {{ message }}
                    <br>
                </span>
            </div>

        {% endfor %}

    {% endfor %}

    </div>
{%  endblock %}