{%  extends 'base.html.twig' %}


{%  block body %}

    {{ form_start(form, {'action': path('app_user_import', {'token': csrf_token('import')})}) }}

    {{ form_widget(form.csv_file) }}

    <button
        class="btn btn-primary"
{#        href="{{ path('app_user_import', {'token':csrf_token('import')}) }}"#}
        onclick="return confirm('Merci de confirmer l\'ajout d\'utilisateur(s) en cliquant sur OK')">Envoyer
    </button>
    {{ form_end(form) }}

    {% for type in ['success', 'error'] %}
        {% for message in app.flashes(type) %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

{%  endblock %}