<div class="form-container">
    {{ form_start(form) }}

    <!-- Formulaire avec les styles appliquÃ©s -->
    {% for child in form %}
        <div class="form-group">
            {{ form_label(child, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(child, {'attr': {'class': 'form-input'}}) }}
            {{ form_errors(child) }}
        </div>
    {% endfor %}
    <button class="form-button">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}
</div>
