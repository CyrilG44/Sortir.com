{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Sorties{% endblock %}

{% block body %}

    <div class="max-w-4xl lg:max-w-3xl mx-auto bg-white-transparent p-6 rounded-lg shadow-lg">
        <h1 class="text-3xl font-extrabold text-gray-800 mb-6 text-center">Modifier Sortie</h1>

            {{ include('activity/_form.html.twig', {'button_label': 'Enregistrer'}) }}

        <div class="action-links mt-5 flex justify-center">
            <a href="{{ path('app_activity_list') }}" class="form-button mx-3">Retour Ã  la liste</a>
            {% if activity.state.name=='draft' %}
                <a href="{{ path('app_activity_publish',{'id':activity.id}) }}" class="form-button mx-3">Publier</a>
            {% endif %}
            {% if activity.state.name !='done' %}
                <a href="{{ path('app_activity_cancel',{'id':activity.id}) }}" class="form-button mx-3">Supprimer</a>
            {% endif %}
        </div>
    </div>
{% endblock %}